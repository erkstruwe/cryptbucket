{
  "name": "cryptbucket",
  "version": "0.0.1",
  "description": "End-to-end encrypted file hosting",
  "author": "Erk Struwe, Bremen, Germany (estruwe@estruwe.de)",
  "license": "UNLICENSED",
  "main": "app/app.js",
  "engines": {
    "node": "5.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erkstruwe/cryptbucket.git"
  },
  "scripts": {
    "test": "npm-run-all --parallel lint test:js",
    "test:js": "jasmine JASMINE_CONFIG_PATH=tests/jasmine.json",
    "start": "npm run clean && npm test && npm run build && node app/app.js",
    "clean": "rimraf .tmp/*",
    "lint": "npm run lint:js",
    "lint:js": "jshint app config tests src/js",
    "build": "npm-run-all --parallel build:static build:js build:css",
    "build:static": "copyfiles --up 2 src/static/**/* .tmp/",
    "build:js": "browserify src/js/components/app/index.js | uglifyjs --compress --mangle --output .tmp/app.js",
    "build:css": "node-sass --include-path node_modules --output-style compressed src/scss/main.scss .tmp/styles.css",
    "watch": "npm run clean && npm run build:static && npm-run-all --parallel watch:app watch:js watch:css",
    "watch:app": "nodemon --watch app --watch config",
    "watch:js": "watchify src/js/components/app/index.js --debug --verbose -o .tmp/app.js",
    "watch:css": "node-sass --include-path node_modules --source-map-embed src/scss/main.scss .tmp/styles.css"
  },
  "dependencies": {
    "angular": "~1.5.0",
    "bootstrap": "~4.0.0-alpha.2",
    "browserify": "~13.0.0",
    "compression": "~1.6.1",
    "copyfiles": "~0.2.1",
    "dotenv": "~2.0.0",
    "express": "~4.13.1",
    "helmet": "~1.1.0",
    "jade": "~1.11.0",
    "jasmine": "~2.4.1",
    "jshint": "~2.9.1",
    "ng-file-upload": "~12.0.1",
    "node-sass": "~3.4.2",
    "npm-run-all": "~1.5.1",
    "rimraf": "~2.5.2",
    "st": "~1.1.0"
  },
  "devDependencies": {
    "nodemon": "~1.8.1",
    "watchify": "~3.7.0"
  },
  "jshintConfig": {
    "esversion": 6
  }
}
